@model TagHelperAndFormValidationsEg.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<div>
    <form asp-controller="Students" asp-action="Edit" method="post" novalidate>
        <label asp-for="StudentId">Name</label> : <input asp-for="StudentId" type="text" readonly />
